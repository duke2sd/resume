#!/usr/bin/conky -d -c
# .conkyrc configuration file for displaying system information.

alignment top_right
xinerama_head 0 #show on second display
background yes
border_width 5
color0 8258FA #graph color 1
color1 FCAF3E #header color
color2 17BA91 #key color
color3 FA5858 #graph color 2

cpu_avg_samples 4
default_color e1e1e1
default_outline_color 000000
default_shade_color 000000
double_buffer yes
draw_borders no
draw_graph_borders no
draw_outline yes
draw_shades no
gap_x 0
gap_y 0
max_user_text 10000
maximum_width 250
minimum_size 850
net_avg_samples 2
no_buffers yes
override_utf8_locale yes
own_window yes
#own_window_colour 000000
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
own_window_transparent yes
own_window_type normal
own_window_class override
pad_percents 2
short_units yes
stippled_borders 3
text_buffer_size 10000
total_run_times 0
update_interval 1.0
uppercase no
use_spacer right
use_xft yes
xftalpha 0.75
xftfont sans:size=10

TEXT

#TIME
${color1}${goto 45}${font League Spartan Medium:size=50}${time %H}${font League Spartan Medium:size=30}${voffset -25}:${time %M}${font League Spartan Medium:size=18}${voffset -12}${time %S}
${color1}${goto 140}${voffset 1}${font :size=10}${time %A}
${color1}${goto 140}${voffset 1}${font :size=10}${time %d %B %Y}
#CALENDAR
${color}${font IntelOne Mono Medium:size=16}${execpi 60 DJS=$(date +%_d); gcal --starting-day=monday | sed s/'Mo Tu We Th Fr Sa Su'/'${color orange}Mo Tu We Th Fr Sa Su${color white}'/g | sed s/'<'/' '/g | sed s/'>'/' '/g | sed s/" $DJS "/'${color red}'" $DJS "'${color white}'/g}

#SYSTEM
${color1}${font IntelOne Mono Medium:size=15}SYSTEM ${font}$hr
${color2}${font IntelOne Mono Medium:size=10}CPU:${alignr}${color}${exec cat /proc/cpuinfo | grep -m 1 name | awk '{$1=$2=$3=$4=""; print $0}'}
${color2}${font IntelOne Mono Medium:size=10}GPU:${alignr}${color}${exec nvidia-smi -q | grep "Product Name" | awk -F ":" '{print $2}'} ${exec nvidia-smi -q | grep "Driver Version" | awk -F ":" '{print $2}'}
${color2}${font IntelOne Mono Medium:size=10}MOBO:${alignr}${color}${exec cat /sys/devices/virtual/dmi/id/board_vendor} ${exec cat /sys/devices/virtual/dmi/id/board_name}

${color2}${font IntelOne Mono Medium:size=10}OS:${alignr}${color}${exec cat /etc/lsb-release | grep DISTRIB_DESCRIPTION | cut -f2 -d'='}
${color2}${font IntelOne Mono Medium:size=10}Kernel: ${alignr}${color}$kernel
${color2}${font IntelOne Mono Medium:size=10}Uptime:${alignr}${color}${uptime}

#CPU
${voffset -10}${color1}${font IntelOne Mono Medium:size=15}CPU ${font}$hr
${color2}CPU Temp:$color ${alignr} ${exec sensors | grep 'Core 0' | awk '{print $3}' | cut -c2-3}째C / ${exec sensors | grep 'Core 1' | awk '{print $3}' | cut -c2-3}째CC / ${exec sensors | grep 'Core 2' | awk '{print $3}' | cut -c2-3}째CC / ${exec sensors | grep 'Core 3' | awk '{print $3}' | cut -c2-3}째C
${color2}CPU Usage:$color ${alignr} $cpu%
${color0} ${cpugraph 40}

#TOP CPU/RAM
${voffset -7}${color1}${font}NAME ${goto 125}PID${goto 165}CPU%${goto 215}MEM%
${color2}${font :size=10}${goto 9}${top name 1}${color}${goto 115}${top pid 1}${goto 160}${top cpu 1}${goto 210}${top mem 1}
${color2}${font :size=10}${goto 9}${top name 2}${color}${goto 115}${top pid 2}${goto 160}${top cpu 2}${goto 210}${top mem 2}
${color2}${font :size=10}${goto 9}${top name 3}${color}${goto 115}${top pid 3}${goto 160}${top cpu 3}${goto 210}${top mem 3}
${color2}${font :size=10}${goto 9}${top name 4}${color}${goto 115}${top pid 4}${goto 160}${top cpu 4}${goto 210}${top mem 4}
${color2}${font :size=10}${goto 9}${top name 5}${color}${goto 115}${top pid 5}${goto 160}${top cpu 5}${goto 210}${top mem 5}

#RAM
${voffset -6}${color1}${font IntelOne Mono Medium:size=15}RAM${font}$hr
${color2}${font :size=10}RAM:${goto 100}${color}${mem} / ${memmax} ${alignr} ${memperc}%
${color3}${membar 12}

#DRIVES
${voffset -6}${color1}${font IntelOne Mono Medium:size=15}DRIVE${font}$hr
${color2}${font :size=10}root:${goto 100}${color}${fs_used /} / ${fs_size /} ${alignr} ${fs_used_perc /}%
${color0}${fs_bar 10 /}

#NETWORK
${voffset -10}${color1}${font IntelOne Mono Medium:size=15}NETWORK${font}$hr
${color2}${font :size=10}gateway: ${color}${alignr}${gw_ip}
${color2}${font :size=10}local eth: ${color}$alignr${addr enp5s0}
${color2}${font :size=10}public: ${alignr}${color}${execpi 60 curl -s ipinfo.io > /tmp/publicIP.tmp; python3 ~/.config/conky/get_publicIP.py IP; #${color2}${font :size=10}public: ${alignr}${color}${execi 60 curl -s https://api.ipify.org/?format=raw}

